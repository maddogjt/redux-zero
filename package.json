{
  "name": "predux",
  "version": "0.1.0",
  "description": "",
  "main": "lib/",
  "types": "lib/",
  "scripts": {
    "clean": "rimraf lib dist es coverage types",
    "compile": "rimraf lib && tsc --pretty",
    "compile:watch": "tsc --pretty --watch",
    "lint": "tslint src/**/*.ts src/**/*.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"config/**/*.js\" \"src/**/*.ts\" \"src/**/*.tsx\"",
    "check": "yarn run compile && yarn run format && yarn run lint && yarn run test",
    "pretest": "yarn run build",
    "build": "yarn run compile",
    "unknown-prepublish": "yarn run build"
  },
  "author": "Matheus Lima <matheusml90@gmail.com>",
  "files": [
    "lib"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maddogjt/predux"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.spec.(ts|tsx)"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "7.14.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-external-helpers": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-flow": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "7.14.6",
    "@types/enzyme": "3.10.8",
    "@types/jest": "26.0.23",
    "cross-env": "7.0.3",
    "enzyme": "3.11.0",
    "enzyme-adapter-preact-pure": "3.1.0",
    "esbuild": "0.12.9",
    "jest": "27.0.5",
    "preact": "10.5.13",
    "prettier": "2.3.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "tslib": "2.3.0",
    "tslint": "6.1.3",
    "typescript": "4.3.4"
  },
  "peerDependencies": {
    "preact": "10.5.13"
  },
  "keywords": [
    "redux",
    "flux",
    "state",
    "predictable",
    "functional",
    "immutable",
    "elm",
    "lightweight",
    "light",
    "small",
    "simple"
  ]
}
